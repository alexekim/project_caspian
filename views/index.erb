

<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h1>Register</h1>
      <form class="form-group" action="/account/register" method="post">
        <input class="form-control" type="email" name="email" placeholder="Enter Email" >
        <br />
        <input class="form-control" type="password" name="password" placeholder="Choose Password">
        <br />
        <input class="form-control" type="password" name="password" placeholder="Confirm Password">
        <br />
        <button class="btn btn-primary" type="submit">Register</button>
      </form>


      <h1>Login</h1>
      <form class="form-group" action="/account/login" method="post">
        <input class="form-control" type="email" name="email" placeholder="Enter Email" >
        <br />
        <input class="form-control" type="password" name="password" placeholder="Enter Password">
        <br />
        <button class="btn btn-primary" type="submit">Login</button>
      </form>
    </div>
  </div>
</div>
